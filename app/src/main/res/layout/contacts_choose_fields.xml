<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="@drawable/contacts_bg">

    <ImageView
        android:id="@+id/Contactspot"
        android:layout_width="317dp"
        android:layout_height="69dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contactspot"
        android:layout_marginLeft="40dp" />
    <Button
        android:id="@+id/ContactsBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="end"
        android:background="@drawable/contacts_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ContactsTitleTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="135dp"
        android:text="adding contacts made simple."
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContactsTitleTag">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ContactsTitleTag"
            tools:layout_editor_absoluteX="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ContactsChooseFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3D4A54"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="Choose which file to show on top"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="77dp"
                    tools:layout_editor_absoluteY="206dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ContactsChooseName"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selected_shape"
                        android:text="Name"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/ContactsChoosePhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/selected_shape"
                        android:text="Phone Number"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ContactsChooseEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_shape"
                        android:text="Email"
                        android:textAllCaps="false"
                        android:textColor="#3D4A54"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/ContactsChooseAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_shape"
                        android:text="Address"
                        android:textAllCaps="false"
                        android:textColor="#3D4A54"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp" />


                    <Button
                        android:id="@+id/ContactsChooseJobTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_shape"
                        android:text="Job Title"
                        android:textAllCaps="false"
                        android:textColor="#3D4A54"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ContactsChooseCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_shape"
                        android:text="Company"
                        android:textAllCaps="false"
                        android:textColor="#3D4A54"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/ContactsChooseGroups"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_shape"
                        android:text="Groups"
                        android:textAllCaps="false"
                        android:textColor="#3D4A54"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp" />

                    <Button
                        android:id="@+id/ContactsChooseNotes"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_shape"
                        android:text="Notes"
                        android:textAllCaps="false"
                        android:textColor="#3D4A54"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ContactsChooseRelationship"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_shape"
                        android:text="Relationship"
                        android:textAllCaps="false"
                        android:textColor="#3D4A54"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:id="@+id/ContactsChooseImportant_Dates"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/unselected_shape"
                        android:text="Important Dates"
                        android:textAllCaps="false"
                        android:textColor="#3D4A54"
                        android:textSize="14sp"
                        tools:layout_editor_absoluteX="53dp"
                        tools:layout_editor_absoluteY="269dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp" />
                </LinearLayout>


                <View
                    android:id="@+id/ContactsChooseView"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp"
                    android:background="#3D4A54"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="194dp" />

                <TextView
                    android:id="@+id/ContactsBroughtBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginBottom="10dp"
                    android:text="Brought to ypu by"
                    android:textSize="12dp"
                    android:layout_marginLeft="35dp" />


                <TextView
                    android:id="@+id/ContactsCodePredators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/presidente"
                    android:text="Code Predators"
                    android:textSize="40dp"
                    tools:layout_editor_absoluteX="89dp"
                    tools:layout_editor_absoluteY="650dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ContactsKumarHarshImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/ContactsKumarHarshName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Kumar Harsh"
                        android:layout_marginStart="0dp"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="89dp"
                        tools:layout_editor_absoluteY="650dp"
                        android:layout_marginLeft="0dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/ContactsRakshitaImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/ContactsRAkshitaName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Rakshita Jain"
                        android:layout_marginStart="0dp"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="89dp"
                        tools:layout_editor_absoluteY="650dp"
                        android:layout_marginLeft="0dp" />


                </LinearLayout>

                <Button
                    android:id="@+id/ContactsBuyCoffee"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buy_coffee"
                    tools:layout_editor_absoluteX="306dp"
                    tools:layout_editor_absoluteY="131dp" />

                <Button
                    android:id="@+id/ConatctsRateUs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="#3D4A54"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:text="Rate Us!"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="267dp"
                    tools:layout_editor_absoluteY="137dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>